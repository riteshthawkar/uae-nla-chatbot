ted readers.<\/p>\n","protected":false},"featured_media":3915,"template":"","meta":{"inline_featured_image":false},"product_cat":[15],"product_tag":[],"acf":[],"_links":{"self":[{"href":"https:\/\/www.nla.ae\/en\/wp-json\/wp\/v2\/product\/3914"}],"collection":[{"href":"https:\/\/www.nla.ae\/en\/wp-json\/wp\/v2\/product"}],"about":[{"href":"https:\/\/www.nla.ae\/en\/wp-json\/wp\/v2\/types\/product"}],"wp:featuredmedia":[{"embeddable":true,"href":"https:\/\/www.nla.ae\/en\/wp-json\/wp\/v2\/media\/3915"}],"wp:attachment":[{"href":"https:\/\/www.nla.ae\/en\/wp-json\/wp\/v2\/media?parent=3914"}],"wp:term":[{"taxonomy":"product_cat","embeddable":true,"href":"https:\/\/www.nla.ae\/en\/wp-json\/wp\/v2\/product_cat?post=3914"},{"taxonomy":"product_tag","embeddable":true,"href":"https:\/\/www.nla.ae\/en\/wp-json\/wp\/v2\/product_tag?post=3914"}],"curies":[{"name":"wp","href":"https:\/\/api.w.org\/{rel}","templated":true}]}}